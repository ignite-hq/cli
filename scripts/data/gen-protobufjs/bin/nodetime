#!/usr/bin/env node

var path  = require("path"),
    jscli = require("../pbjs.js"),
    tscli = require("../pbts.js");

var args = process.argv.slice(3);
var mode = process.argv[2];
var ret;

if (mode === "sta") {
    require("../sta");
    return;
}

if (mode === "js") {
    ret = jscli.main(args);
} else {
    ret = tscli.main(args);
}

if (typeof ret === 'number')
    process.exit(ret);
