package cmd

import (
	"fmt"

	"github.com/spf13/cobra"
)

// New<%= Title %> creates a new <%= Name %> command.
func New<%= Title %>() *cobra.Command {
	c := &cobra.Command{
		Use:           "<%= Name %>",
		Short:         "Say hello to the world of ignite!",
		SilenceUsage:  true,
		SilenceErrors: true,
		RunE: func(cmd *cobra.Command, args []string) error {
			fmt.Println("Hello, world!")
			return nil
		},
	}

	return c
}